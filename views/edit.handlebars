<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        />
        編輯我的餐廳
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<div class="container mt-3">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label"><i
          class="fas fa-store pr-2"
        ></i>餐廳名稱(中文)<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="name"
        name="name"
        value="{{restaurant.name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label"><i
          class="fas fa-store pr-2"
        ></i>餐廳名稱(英文)<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name_en"
        placeholder="English Name"
        name="name_en"
        value="{{restaurant.name_en}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label"><i
          class="fas fa-utensils pr-2"
        ></i>餐廳類別<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="category"
        name="category"
        list="categoryOptions"
        value="{{restaurant.category}}"
        required
      />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>酒吧</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label"><i
          class="fas fa-camera pr-2"
        ></i>圖片連結<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="image"
        name="image"
        value="{{restaurant.image}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label"><i
          class="fas fa-map-marker-alt pr-2"
        ></i>地址<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="location"
        placeholder="location"
        name="location"
        value="{{restaurant.location}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label"><i
          class="fas fa-mobile-alt pr-2"
        ></i>電話<span class="text-danger">*</span></label>
      <input
        type="tel"
        class="form-control"
        id="phone"
        placeholder="phone"
        name="phone"
        value="{{restaurant.phone}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label"><i
          class="far fa-map pr-2"
        ></i>Google地圖連結<span class="text-danger">*</span></label>
      <input
        type="url"
        class="form-control"
        id="google_map"
        name="google_map"
        value="{{restaurant.google_map}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label"><i
          class="fas fa-star pr-2"
        ></i>評分<span class="text-danger">*</span></label>
      <input
        type="number"
        class="form-control"
        id="rating"
        min="0"
        max="5"
        step="0.1"
        name="rating"
        value="{{restaurant.rating}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label"><i
          class="far fa-edit pr-2"
        ></i>敘述<span class="text-danger">*</span></label>
      <textarea
        class="form-control"
        id="description"
        rows="3"
        name="description"
        required
      >{{restaurant.description}}</textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">儲存餐廳</button>
      <a href="/"><button
          type="button"
          class="btn btn-outline-secondary"
        >返回首頁</button></a>
      <button type="reset" class="btn btn-outline-danger">重新輸入</button>
    </div>

  </form>
</div>